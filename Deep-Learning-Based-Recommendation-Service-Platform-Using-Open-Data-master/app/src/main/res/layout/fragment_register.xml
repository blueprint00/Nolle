<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/imageView_profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/register_user_main"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"/>

        <Button
            android:id="@+id/button_profileImageSet"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="이미지 등록"
            android:textSize="15sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/editText_register_email"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:hint="name@example.com"
                android:padding="8dp"
                android:drawableLeft="@drawable/email_icon" />
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/editText_register_password"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/password_icon"
                android:hint="비밀번호를 입력해주세요."
                android:inputType="textPassword" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">
        <EditText
            android:id="@+id/editText_register_password_again"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="비밀번호를 재입력해주세요."
            android:maxLength="12"
            android:drawableLeft="@drawable/password_icon"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">
        <EditText
            android:id="@+id/editText_register_name"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:hint="이름을 입력해주세요."
            android:drawableLeft="@drawable/register_name_icon"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">
        <EditText
            android:id="@+id/editText_register_nickName"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_below="@id/editText_register_name"
            android:hint="닉네임을 입력해주세요."
            android:drawableLeft="@drawable/register_name_icon"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">
            <EditText
                android:id="@+id/editText_register_age"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:hint="1999-01-01"
                android:drawableLeft="@drawable/home_hot_review_star"/>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/maleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="남자" />

            <Button
                android:id="@+id/femaleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="여자"/>

        </LinearLayout>


        <Button
            android:id="@+id/button_register_signUp"
            android:background="@drawable/button_rectangle"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="회원 가입"
            android:textSize="15sp"/>
    </LinearLayout>
</ScrollView>

